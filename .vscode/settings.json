{
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingTypeStubs": "none",
        "reportUnknownMemberType": "none",
        "reportUnknownVariableType": "none",
        "reportUnknownArgumentType": "none",
        "reportUnknownParameterType": "none",
        "reportUnknownLambdaType": "none",
        "reportOptionalMemberAccess": "warning",
        "reportOptionalSubscript": "warning",
        "reportPrivateImportUsage": "none",
        "reportGeneralTypeIssues": "none"
    },
    "python.linting.enabled": false,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.extraPaths": [
        "${workspaceFolder}/scheduler",
        "${workspaceFolder}/cloud_functions/scheduler_function",
        "${workspaceFolder}/cloud_functions/worker_job",
        "${workspaceFolder}/dashboard"
    ],
    
    // cSpell Configuration
    "cSpell.enabled": true,
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.showStatus": false,
    "cSpell.words": [
        "CASS",
        "cass",
        "Firestore",
        "firestore",
        "electricitymap",
        "Rzuy",
        "pytest",
        "maxfail",
        "gco",
        "kwh",
        "streamlit",
        "plotly",
        "pytz",
        "numpy",
        "pandas",
        "gcloud",
        "googleapis",
        "grpc",
        "grpcio",
        "cloudfunction",
        "cloudfunctions",
        "serverless",
        "datetime",
        "isoformat",
        "strftime",
        "fastapi",
        "uvicorn",
        "pydantic",
        "conftest",
        "autouse",
        "monkeypatch",
        "stapp",
        "markdownit",
        "pyarrow",
        "watchdog",
        "toml",
        "orbitron",
        "rajdhani",
        "neon",
        "cyberpunk"
    ],
    "cSpell.ignorePaths": [
        "node_modules",
        ".git",
        ".github",
        ".vscode",
        "**/.venv/**",
        "**/__pycache__/**",
        "**/*.pyc",
        "**/venv/**",
        "**/env/**",
        "**/.pytest_cache/**",
        "**/.mypy_cache/**",
        "**/dist/**",
        "**/build/**",
        "**/*.min.js",
        "**/*.min.css"
    ],
    "cSpell.enabledFileTypes": {
        "json": false,
        "jsonc": false
    }
}
