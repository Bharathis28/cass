{
  "displayName": "CASS-Lite v2 - High Error Rate Alert",
  "documentation": {
    "content": "This alert triggers when the job_failures metric exceeds 3 errors within a 5-minute window, indicating potential issues with the CASS-Lite services.",
    "mimeType": "text/markdown"
  },
  "conditions": [
    {
      "displayName": "Job failures > 3 in 5 minutes",
      "conditionThreshold": {
        "filter": "metric.type=\"logging.googleapis.com/user/job_failures\" resource.type=\"cloud_run_revision\"",
        "aggregations": [
          {
            "alignmentPeriod": "300s",
            "perSeriesAligner": "ALIGN_RATE",
            "crossSeriesReducer": "REDUCE_SUM"
          }
        ],
        "comparison": "COMPARISON_GT",
        "thresholdValue": 3,
        "duration": "300s"
      }
    }
  ],
  "combiner": "OR",
  "enabled": true,
  "notificationChannels": [],
  "alertStrategy": {
    "autoClose": "1800s"
  }
}
